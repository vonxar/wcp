package test;

public class checked extends tasu {
	private static String stone;

	public static boolean chekedwin(boolean player){
	int count = 0;
	if(player == true) {
	 stone = "●";
	} else {
	 stone = "◯";
	}
	for(int y=0;y<banall.length;y++){ //横
        for(int x=0;x<banall[0].length;x++){
          String b = banall[y][x];
          if(count != 5) {
	        	  if (b == stone) {
	        		  count++;
	        		  break;
	        	  } else {
	        		  count = 0;
	        		  break;
	        	  }
	          }
	          else {
	        	  System.out.println(stone+"の勝ちです。");
	        	  win = true;
	        	  return win;
	          }
          }
        }
	for(int x=0;x<banall.length;x++){ //縦
		count = 0;
        for(int y=0;y<banall[0].length;y++){
          String b = banall[y][x];
          if(count != 5) {
	        	  if (b == stone) {
	        		  count++;
	        		  break;
	        	  } else {
	        		  count = 0;
	        		  break;
	        	  }
	          }
	          else {
	        	  System.out.println(stone+"の勝ちです。");
	        	  win = true;
	        	  return win;
	          }
          }
        }
	for(int y=0;y<banall.length;y++){ //斜め上
		int up = 0;
		int yoko = y;
		count = 0;
        for(int x=0;x<=y;x++){
          String b = banall[yoko][up];
          up++;
          yoko--;
          if(count != 5) {
	        	  if (b == stone) {
	        		  count++;
	        		  break;
	        	  } else {
	        		  count = 0;
	        		  break;
	        	  }
	          }
	          else {
	        	  System.out.println(stone+"の勝ちです。");
	        	  win = true;
	        	  return win;
	          }
          }
        }


	count = 0;
	for(int y=0;y<=banall.length-5;y++){ //斜め下
		int down = 0;
		int yoko=y;
        for(int x=y;x<=8;x++){
          String b = banall[yoko][down];
          down++;
          yoko++;
          if(count != 5) {
	        	  if (b == stone) {
	        		  count++;
	        		  break;
	        	  } else {
	        		  count = 0;
	        		  break;
	        	  }
	          }
	          else {
	        	  System.out.println(stone+"の勝ちです。");
	        	  win = true;
	        	  break;
	          }
          }
        }


	return win;
	  }
	}